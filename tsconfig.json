{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "pretty": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "noStrictGenericChecks": true,
    "skipLibCheck": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "sourceMap": true,
    "removeComments": false,
    "baseUrl": "./src/",
    "typeRoots": [
      "./node_modules/@types",
      "./src/typings"
    ],
    "lib": [
      "dom",
      "es5",
      "es2015.promise"
    ]
  },
  "include": [
    "src/**/*"
  ]
}